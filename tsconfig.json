{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": "./src",
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@type/*": ["src/type/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
